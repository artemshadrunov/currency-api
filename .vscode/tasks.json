{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Tests",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/CurrencyConverter.Tests/CurrencyConverter.Tests.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Run API",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/CurrencyConverter.Core/CurrencyConverter.Core.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run API (Watch)",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/CurrencyConverter.Core/CurrencyConverter.Core.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "Tests: coverage + html report",
            "type": "shell",
            "command": "dotnet test ./CurrencyConverter.Tests/CurrencyConverter.Tests.csproj --settings ./coverlet.runsettings --results-directory ./TestResults && reportgenerator -reports:\"./TestResults/**/coverage.cobertura.xml\" -targetdir:coverage-report -reporttypes:Html",
            "problemMatcher": []
        }
    ]
} 